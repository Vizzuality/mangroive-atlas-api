<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Site Report</title>
  </head>
  <body>
    <% @single_site.each do |site_row| %>
      <h1>
        <%= site_row['site_name'] %>
      </h1>
      <h4>
        Site ID: <%= site_row['site_id'] %>
      </h4>
    <% end %>
    <% @pdf_reg_answers.each do |key, item| %>
      <hr style="margin-top: 0em; margin-bottom: 0em;">
      <div class= "<%= cycle('white', 'mint') -%>" style="padding-top: 16px; padding-bottom: 32px;">
        <table>   
          <tr>
            <td style="padding: 10px"><%= key %></td>          
            <td><b><%= item[:name] %></b></td>
          </tr>
          <% item[:value].each do |x| %>
            <tr>
              <td></td>
              <td><%= x %></td>
            </tr>
          <% end %>
        </table>
      </div>
    <% end %>
    <% @pdf_mon_answers.each do |key, value| %>
      <% value["answers"].each do |x, y| %>
        <hr style="margin-top: 0em; margin-bottom: 0em;">
        <div class= "<%= cycle('white', 'mint') -%>" style="padding-top: 16px; padding-bottom: 32px;">
          <table>         
            <tr>
              <td style="padding: 10px"><%= x %></td>          
              <td><b><%= y[:name] %></b></td>
            </tr>
            <% y[:value].each do |item| %>
            <tr>
              <td></td>
              <td><%= item %></td>
            </tr>
            <% end %>
          </table>
        </div>
      <% end %>
    <% end %>    
  </body>
</html>
